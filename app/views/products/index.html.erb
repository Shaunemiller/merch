<h1>Products</h1>

<section class="products">

<% @products.each do |product| %>

	<div class="product">

		<div class="image">
+				<%= link_to product_path(product) do %>
+					<%= image_tag product.image.url(:thumb) %>
+				<% end %>
+			</div>
	

		<%= link_to product_path(product) do %>
			<h3><%= product.name %> </h3>
		<% end %>

			<div class="info">
			<p> <%= product.description.truncate(75, separator: /\s/) %> </p>

			<small> <%= number_to_currency(product.price_in_pence.to_f / 100, unit:"Â£") %>  </small>
			</div>

		<div class="Actions">
			<!-- if logged in AND user is owner -->
		<%= link_to "Edit", edit_product_path(product) %>
		<%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure you want to delete that?"} %>
			<!-- end -->
	</div>

</div>

<% end %>

</section>